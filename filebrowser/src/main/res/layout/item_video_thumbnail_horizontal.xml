<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imageBitmap"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:foreground="@drawable/item_background"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/checkedImageBackground"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/dark_gray"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/imageBitmap"
        app:layout_constraintEnd_toEndOf="@id/imageBitmap"
        app:layout_constraintStart_toStartOf="@id/imageBitmap"
        app:layout_constraintTop_toTopOf="@id/imageBitmap" />

    <ImageView
        android:id="@+id/checkedImage"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/tick"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/imageBitmap"
        app:layout_constraintEnd_toEndOf="@id/imageBitmap"
        app:layout_constraintHeight_percent="0.25"
        app:layout_constraintStart_toStartOf="@id/imageBitmap"
        app:layout_constraintTop_toTopOf="@id/imageBitmap"
        app:layout_constraintWidth_percent="0.25" />


    <ImageView
        android:id="@+id/playButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/play"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="@id/imageBitmap"
        app:layout_constraintHeight_percent="0.15"
        app:layout_constraintTop_toTopOf="@id/imageBitmap"
        app:layout_constraintWidth_percent="0.15" />

</androidx.constraintlayout.widget.ConstraintLayout>